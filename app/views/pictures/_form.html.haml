.form__content
  = form_for @group do |f|
    .form__content__box
      = f.text_field :text,placeholder: 'type a message',class: 'form_field',remote: 'true'
      = f.label :image,class: 'label' do
        = fa_icon 'camera-retro', class: 'icon'
        = f.file_field :image, class: 'hidden'
      = f.submit "Send",class: "form__submit"
